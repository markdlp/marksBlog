{
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch localhost",
            "url": "http://localhost:1313/",
            "webRoot": "${workspaceFolder}",
            "pathMappings": [{
                "url": "http://localhost:1313",
                "path": "${workspaceFolder}"
            }]
        }
    ]
}