{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start server",
            "type": "shell",
            "command": "hugo",
            "args": [
                "server",
                "--buildDrafts",
                "--buildFuture",
                "--bind=0.0.0.0",
                "--baseURL=http://localhost:1313",
                "--port",
                "1313",
                "--noTimes"
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            // THIS is what launches your Ubuntu Firefox
            "serverReadyAction": {
                "pattern": "Web Server is available at",
                "uriFormat": "%s",
                "action": "openExternally"
            },
            "problemMatcher": [
                {
                    "owner": "hugo",
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}"
                    ],
                    "pattern": {
                        "regexp": "^Error: (.*): (.*):(\\d+):(\\d+): (.*)$",
                        "file": 2,
                        "line": 3,
                        "column": 4,
                        "message": 5
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^Start building sites.*",
                        "endsPattern": "^Total in.*"
                    }
                }
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}