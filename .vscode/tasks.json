{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start server",
            "command": "hugo",
            "type": "shell",
            "args": [
                "server",
                "--buildDrafts",
                "--buildFuture",
                "--baseURL=http://localhost:1313",
                "--port",
                "1313",
                "--noTimes"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "isBackground": true,
            "problemMatcher": [
                {
                    "owner": "hugo",
                    "fileLocation": "absolute",
                    "pattern": {
                        "regexp": "^(Error):.*\"(.*?):(\\d*):(\\d*)\": (.*)",
                        "severity": 1,
                        "file": 2,
                        "line": 3,
                        "column": 4,
                        "message": 5
                    },
                    "background": {
                        "activeOnStart": false,
                        "beginsPattern": "^Start building .*",
                        "endsPattern": "^Total in .*"
                    }
                }
            ],
            "group": "build"
        }
    ]
}